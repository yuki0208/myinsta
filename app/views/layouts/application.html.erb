<!DOCTYPE html>
<html>
  <head>
    <title>Myinsta</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |k, messages| %>     
      <% messages.each do |message| %>
        <div class="<%= k %>">
          <%= message %>
          </div>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
