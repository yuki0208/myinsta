<% if @photopost.like_user(current_user.id) %>
  <%= button_to photopost_like_path(likes, photopost_id: photopost.id), method: :delete, id: "like-button", remote: true do %>
    <%= image_tag("icon_red_heart.svg") %>
      <span>
        <%= @photopost.likes_count %>
      </span>
  <% end %>
<% else %>
  <%= button_to photopost_likes_path(@photopost), id: "like-button", remote: true do %>
    <%#= image_tag("icon_heart.svg") %>
      <span>
        <%= @photopost.likes_count %>
      </span>
  <% end %>
<% end %>
