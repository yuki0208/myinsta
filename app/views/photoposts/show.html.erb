<div class="photo">
  <%= image_tag @photopost.picture, class: 'small-item' if @photopost.picture.present? %>
    <div class="comment">
      <%= @photopost.comment %>
    </div>
    <%= render partial: 'likes/like', locals: { photopost: @photopost } %>
    <nav>
      <%= link_to 'User Page', @photopost.user %>
      <% if current_user == @photopost.user %>
        <%= link_to 'Edit', edit_photopost_path %>
      <% end %>
   </nav>
</div>
